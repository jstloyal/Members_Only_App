<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :title, label: "Post title", input_html: { class: "input has-text-success"}, wrapper: false, label_html: {class: "label has-text-success"}, placeholder: "What is the gist for today...", autofocus: true %>
  </div>
  <div class="control">
    <%= f.input :body, label: "Post a new gist", input_html: { class: "textarea has-text-success"}, wrapper: false, label_html: {class: "label has-text-success"}, placeholder: "Compose a new post...", autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-success" %>
<% end %>
